<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<!--
    tested with mame 0.181 and related hiscore.dat
      source: Thomas Busse
//-->
<hi2txt label="Cosmic Avenger">
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:6025:41:00:28</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>65</size>
    </check>
    <loop count="5" >
	  <elt size="3"  type="int"  id="SCORE" base="16"/>
	  <elt size="10" type="text" id="NAME"  charset="charconv" ascii-offset="55"/>
    </loop>
  </structure>

  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"/>
      <column id="NAME"/>
    </table>
  </output>
  
  <charset id="charconv">
	<char src="0x00" dst="0"/>
	<char src="0x01" dst="1"/>
	<char src="0x02" dst="2"/>
	<char src="0x03" dst="3"/>
	<char src="0x04" dst="4"/>
	<char src="0x05" dst="5"/>
	<char src="0x06" dst="6"/>
	<char src="0x07" dst="7"/>
	<char src="0x08" dst="8"/>
	<char src="0x09" dst="9"/>

    <char src="0x24" dst=" "/>
    <char src="0x25" dst="."/>
	<char src="0x26" dst=":"/>
	<char src="0x27" dst="&amp;"/>
	<char src="0x28" dst="!"/>
	<char src="0x29" dst="?"/>
	<char src="0x2A" dst="("/>
	<char src="0x2B" dst=")"/>
	<char src="0x2C" dst="+"/>
	<char src="0x2D" dst="-"/>
	<char src="0x2E" dst="="/>

	<char src="0x2F" dst="&black-heart;"/>	     <!-- heart-->
	<char src="0x30" dst="&woman;"/>	         <!-- female -->
	<char src="0x31" dst="&man;"/> 	             <!-- male but 90Â°--> 
	<char src="0x32" dst="&single-music-note;"/> <!-- note-->
	<char src="0x33" dst="&spaceship;"/>         <!-- space invader-->
  </charset>

</hi2txt>

