<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:ec81:27:01:4e
                  0:e3a8:03:01:00</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>42</size>
    </check>
    <loop count="4">
      <elt size="3" type="int"  id="SCORE" base="16"/>
      <elt size="1" type="int"  id="STAGE" base="16"/>
      <elt size="3" type="text" id="NAME"/>
      <elt size="1" type="raw"  id="SPACE"/>
    </loop>
    <loop count="1" start="4">
      <elt size="3" type="int"  id="SCORE" base="16"/>
      <elt size="1" type="int"  id="STAGE" base="16"/>
      <elt size="3" type="text" id="NAME"/>
    </loop>
    <elt size="3" type="int" id="TOP SCORE" base="16"/>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE" format="*10"/>
      <column id="NAME"/>
      <column id="STAGE"/>
      <column id="SPACE" format="0x" display="debug"/>
    </table>
    <field id="TOP SCORE" display="extra"/>
  </output>
</hi2txt>
