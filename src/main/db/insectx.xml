<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.153 and hiscore.dat 2014-08-22
      source: GreatStone
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:c600:50:00:00
                  0:c6ea:3:00:21</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>83</size>
    </check>
    <loop count="10">
      <elt size="3" type="int"  id="SCORE" base="16"/>
      <elt size="1" type="int"  id="STAGE"/>
      <elt size="3" type="text" id="NAME"/>
      <elt size="1" type="raw"  id="EMPTY"/>
    </loop>
    <elt size="3" type="int" id="TOP SCORE" base="16"/>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE" format="*100"/>
      <column id="NAME"/>
      <column id="STAGE"/>
      <column id="EMPTY" format="0x" display="debug"/>
    </table>
    <field id="TOP SCORE" format="*100" display="extra"/>
  </output>
</hi2txt>
