<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt label="Bubbles">
  <!--
    tested with mame 0.181 and embedded hiscore.dat
    source: GreatStone
  //-->
  
  <structure file="nvram">
    <check>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>1024</size>
    </check>
	<elt size="36"  type="raw"  id="SETTINGS"/>
	<elt size="108" type="text" id="WILLIAMS TEXT" nibble-skip="odd" ascii-offset="54" charset="charconv"/>
	<elt size="174" type="raw"  id="UNKNOWN"/>
	<loop count="1">
	  <elt size="40" type="text" id="FULL NAME" nibble-skip="odd" ascii-offset="54" charset="charconv"/>
	  <elt size="6"  type="text" id="NAME"      nibble-skip="odd" ascii-offset="54" charset="charconv"/>
	  <elt size="1"  type="int"  id="CHECKSUM"/>
      <elt size="7"  type="int"  id="SCORE" decoding-profile="bcd"/>
    </loop>
    <loop count="40" start="1">
      <elt size="6"  type="text" id="NAME" nibble-skip="odd" ascii-offset="54" charset="charconv"/>
	  <elt size="1"  type="int"  id="CHECKSUM"/>
      <elt size="7"  type="int"  id="SCORE" decoding-profile="bcd"/>
    </loop>
	<loop count="6">
      <elt size="6"  type="text" id="BEST NAME" nibble-skip="odd" ascii-offset="54" charset="charconv"/>
	  <elt size="1"  type="int"  id="BEST CHECKSUM"/>
      <elt size="7"  type="int"  id="BEST SCORE" decoding-profile="bcd"/>
    </loop>
  </structure>
  
  <output>
    <field id="WILLIAMS TEXT" display="debug"/>
    <table id="TODAYS BUBBLES" lines-max="40">
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"/>
      <column id="NAME"/>
	  <column id="FULL NAME"/>
    </table>
	
	<table id="BEST BUBBLES">
      <column id="RANK" src="index" format="+1"/>
      <column id="BEST SCORE"/>
      <column id="BEST NAME"/>
    </table>
  </output>
  
  <charset id="charconv">
    <char src="0x0A" dst=" "/>
  </charset>
</hi2txt>
