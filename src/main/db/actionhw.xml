<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:ff5a2a:28:4a:01</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>40</size>
    </check>
    <loop count="5">
      <elt size="3" type="text" id="NAME"/>
      <elt size="1" type="raw"  id="UNKNOWN"/>
      <elt size="2" type="int"  id="SCORE"/>
      <elt size="2" type="int"  id="STAGE" decoding-profile="bcd"/>
    </loop>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE" format="*100"/>
      <column id="NAME"/>
      <column id="STAGE" format="stage"/>
      <column id="UNKNOWN" format="hexadecimal_string" display="debug"/>
    </table>
  </output>
  
  <format id="+1"><add>1</add></format>
  <format id="*100"><multiply>100</multiply></format>
  <format id="r10"><remainder>10</remainder></format>
  <format id="/10"><divide_trunc>10</divide_trunc></format>
  <format id="stage" input-as-subcolumns-input="true">
    <concat><column format="/10"/><field>.</field><column format="r10"/></concat>
  </format>
</hi2txt>
