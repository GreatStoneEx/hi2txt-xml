<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt label="Venture">
  <!--
    tested with mame 0.181 and embedded hiscore.dat
    source: GreatStone
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>@:maincpu,program,0380,23,00,53</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>35</size>
    </check>
	<loop count="5">
	  <elt size="1" type="int"  id="POINTER" format="/6"/>
	</loop>
    <loop count="5">
      <elt size="3" type="int"  id="SCORE" base="16"/>
      <elt size="3" type="text" id="NAME"/>
    </loop>
  </structure>
  
  <output>
    <table sort="POINTER" sort-order="desc">
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE" format="*10"/>
      <column id="NAME"/>
      <column id="POINTER" display="extra"/>
    </table>
  </output>
</hi2txt>
