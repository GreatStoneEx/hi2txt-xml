<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:2140:4a:00:e6
                  0:205d:4:00:00</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>78</size>
    </check>
    <loop count="5">
      <elt size="4" type="int"  id="SCORE" base="16"/>
      <elt size="1" type="int"  id="ROUND"/>
      <elt size="5" type="text" id="NAME"  charset="pacland"/>
      <elt size="6" type="raw"  id="PADDING"/>
      <!-- last padding not dumped //-->
    </loop>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"/>
      <column id="NAME"/>
      <column id="ROUND"/>
      <column id="PADDING" format="hexadecimal_string" display="debug"/>
    </table>
  </output>
    
  <format id="+1"><add>1</add></format>
  
  <charset id="pacland">
    <char src="0xE4" dst="&crescent-moon;"/> <!-- pacman //-->
    <char src="0xE5" dst="&headset;"/>       <!-- ghost //-->
    <char src="0xE6" dst="."/>
    <char src="0xE7" dst=" "/>
  </charset>
</hi2txt>
