<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:ff101c:50:00:26
                  0:ff107c:08:00:00</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>88</size>
    </check>
    <loop count="5">
      <elt size="8" type="int"  id="SCORE" nibble-skip="odd" base="16"/>
      <elt size="3" type="text" id="NAME"/>
      <elt size="5" type="raw"  id="CHECKSUM"/>
    </loop>
    <elt size="8" type="int"  id="TOP SCORE" nibble-skip="odd" base="16"/>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"    format="*10"/>
      <column id="NAME"/>
      <column id="CHECKSUM" format="hexadecimal_string" display="debug"/>
    </table>
    <field id="TOP SCORE"   format="*10"                display="extra"/>
  </output>
  
  <format id="+1"><add>1</add></format>
  <format id="*10"><multiply>10</multiply></format>
</hi2txt>
