<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt label="Meteorites">
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
    modified for mame 0.204 and related hiscore.dat
      source: GreatStone
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
	  <definition>0:001c:35:00:00</definition> <!-- 0.148 -->
      <definition>@:maincpu,program,001c,35,00,00
                  @:maincpu,program,4030,01,01,01</definition> <!-- 0.204 -->
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>53</size> <!-- 0.148 -->
	  <size>54</size> <!-- 0.204 -->
    </check>
    <loop count="10">
      <elt size="2" type="int"  id="SCORE" endianness="little_endian" base="16"/>
    </loop>
    <elt size="3" type="raw"  id="SEPARATOR"/>
    <loop count="10">
      <elt size="3" type="text" id="NAME"  charset="asteroid" ascii-offset="54"/>
    </loop>
  </structure>
  
  <output>
    <table line-ignore="SCORE:0">
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE" format="*10"/>
      <column id="NAME"/>
    </table>
    <field id="SEPARATOR" format="0x" display="debug"/>
  </output>
  
  <charset id="asteroid">
    <char src="0x00" dst=" "/>
  </charset>
</hi2txt>