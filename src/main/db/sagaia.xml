<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with:
	  mame 0.0219 and related hiscore.dat
	history:
	  2020-04-21 fork decoding algorithm from darius2 to have a specific one
    source: GreatStone
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:c216e:44b:00:20</definition>
      <definition>0:1010fa:44b:00:20</definition> <!-- darius2d //-->
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>1099</size>
    </check>
	<elt size="4"  type="raw" id="PADDING"/>
    <loop count="50">
      <elt size="4"  type="int"  id="SCORE"/>
      <elt size="3"  type="text" id="NAME"/>
      <elt size="1"  type="raw"  id="SEPARATOR"/>
      <elt size="13" type="text" id="STAGE"/>
      <elt size="1"  type="raw"  id="SEPARATOR2"/>
    </loop>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"/>
      <column id="NAME"/>
      <column id="SEPARATOR"  format="0x" display="debug"/>
      <column id="STAGE" format="Trim "/>
      <column id="SEPARATOR2" format="0x" display="debug"/>
    </table>
  </output>
</hi2txt>
