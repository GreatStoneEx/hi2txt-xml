<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE hi2txt SYSTEM "hi2txt.dtd">
<hi2txt>
  <!--
    tested with mame 0.148 and related hiscore.dat
      source: HiToText
  //-->
  
  <structure file=".hi">
    <check>
      <!-- optional: if defined and hiscore.dat provided, it allows to select the good structure versus the provided file //-->
      <definition>0:828b:2d:00:0c</definition>
      <!-- optional: if defined, it allows to select the good structure versus the provided file
                     useful if multiple structures are defined but hiscore.dat not provided //-->
      <size>45</size>
    </check>
    <loop count="5"><elt size="6" type="int"  id="SCORE" table-index="loop_reverse_index" decoding-profile="bcd"/></loop>
    <loop count="5"><elt size="3" type="text" id="NAME"  table-index="loop_reverse_index" charset="funkybee" ascii-offset="55"/></loop>
  </structure>
  
  <output>
    <table>
      <column id="RANK" src="index" format="+1"/>
      <column id="SCORE"/>
      <column id="NAME"/>
    </table>
  </output>
  
  <charset id="funkybee">
    <char src="0x28" dst="."/>
    <char src="0x29" dst="-"/>
    <char src="0xFF" dst=" "/>
  </charset>
</hi2txt>
